{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "bigbinf-builder",
    "labels": {
      "app": "bigbinf-builder"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "bigbinf-builder"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "bigbinf-builder"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "bigbinf-builder",
            "image": "bigbinf/builder",
            "securityContext":{
              "privileged": true
            },
            "env":[
            	{
            		"name": "PORT",
            		"value": "5002"
            	}
            ],
            
            "ports": [
              {
                "containerPort": 5002,
                "port": 5002,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ]
        
      }
    }
  }
}